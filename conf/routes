# System Routes
GET           /                                           controllers.Application.index

# User Routes
POST          /users/login                                controllers.User.login
POST          /users/create                               controllers.User.create
GET           /users/:id                                  controllers.User.read(id: UUID)
PUT           /users/:id                                  controllers.User.update(id: UUID)
DELETE        /users/:id                                  controllers.User.delete(id: UUID)

